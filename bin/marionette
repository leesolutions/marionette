#!/usr/local/bin/ruby

require 'rubygems'
require 'daemons'
require 'marionette'

options = nil

if ARGV.size > 1
  tcp = ARGV[1] rescue nil
  options = { :uri => tcp }
end

Daemons.run_proc('marionette',:dir_mode => :system, :log_output => true) do
  HeadStartApp::Marionette::Connect.new(options).puppet
end
